[Unit]
Description=NAFUDA bootup
After=multi-user.target

[Service]
WorkingDirectory=/home/pi/bcon_nafuda/bootup
ExecStart=/home/pi/bcon_nafuda/bootup/bootup.sh
ExecStopPost=/home/pi/bcon_nafuda/bootup/exec_stop_post.sh
Type=oneshot

[Install]
WantedBy=multi-user.target

## how to install
